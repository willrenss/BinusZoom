@model BinusZoom.Models.Meeting

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-page py-5">
    <div class="container-lg my-5">
        <div class="d-flex justify-content-center px-3 pt-5 container">
            <form class="bg-white px-5 pt-5 pb-3 rounded justify-content-center shadow-lg" asp-action="Edit">
                <h1 class="text-center">Edit Event</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="MeetingDate" class="label-form"></label>
                    <input asp-for="MeetingDate" class="form-control" />
                    <span asp-validation-for="MeetingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PosterPath" class="label-form"></label>
                    <input asp-for="PosterPath" class="form-control" />
                    <span asp-validation-for="PosterPath" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-end mt-3 pt-3">
                    <a class="secondary-filled-btn me-2" asp-action="Index">Cancel</a>
                    <input type="submit" value="Save" class="primary-filled-btn" />
                </div>
            </form>
        </div>
    </div>
</div>
