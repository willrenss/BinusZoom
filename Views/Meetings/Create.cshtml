                @Html.EditorFor(model => model.PosterFile, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                @Html.ValidationMessageFor(model => model.PosterFile, "", new { @class = "text-danger" })
            </div>
        </div>


